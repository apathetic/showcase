{
  "name": "Components",
  "version": "0.1.0",
  "description": "A showcase of handy components",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://stash.hugeinc.com/projects/CMPTS/repos/showcase/browse"
  },
  "main": "source/js/main.js",
  "scripts": {
    "clean": "#rm -rf dist/**/*",
    "lint:css": "node_modules/.bin/stylelint source/sass/**/*.scss --syntax scss",
    "lint:js": "eslint source/js/*.js",
    "build:css": "npm run lint:css && node-sass --include-path source/sass source/sass/main.scss | postcss --use autoprefixer | cleancss > dist/css/main.min.css",
    "build:js": "npm run lint:js && rollup -c",
    "watch:css": "watch 'npm run build:css' source/sass",
    "watch:js": "watch 'npm run build:js' source/js",
    "watch": "run-p watch:**"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-2": "^6.5.0",
    "clean-css": "^3.4.17",
    "eslint": "^2.11.1",
    "eslint-config-defaults": "^9.0.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.2.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.27.1",
    "rollup-plugin-babel": "^2.5.1",
    "rollup-plugin-uglify": "^1.0.0",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^7.0.0",
    "watch": "^0.18.0"
  },
  "author": "wes hatch",
  "license": "MIT"
}
