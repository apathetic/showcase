{
  "name": "Components",
  "author": "wes hatch",
  "license": "MIT",
  "version": "0.1.0",
  "description": "A showcase of handy components",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugeinc/showcase"
  },
  "devDependencies": {
    "@hugeinc/carousel": "^0.6.0",
    "@hugeinc/stickynav": "^0.1.0",
    "autoprefixer": "^6.3.3",
    "clean-css": "^3.4.17",
    "eslint": "^2.13.1",
    "eslint-config-defaults": "^9.0.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2",
    "rollup": "^0.27.1",
    "rollup-plugin-buble": "^0.12.1",
    "rollup-plugin-node-resolve": "^1.7.1",
    "rollup-plugin-uglify": "^1.0.1",
    "stylelint": "^6.9.0",
    "stylelint-config-standard": "^7.0.0",
    "watch": "^0.18.0"
  },
  "scripts": {
    "clean": "rm -rf dist/**/*",
    "lint:css": "stylelint source/sass/**/*.scss --syntax scss",
    "lint:js": "eslint source/js/*.js",
    "build:css": "npm run lint:css && node-sass --include-path source/sass source/sass/main.scss | postcss --use autoprefixer | cleancss > dist/css/main.min.css",
    "build:js": "npm run lint:js && rollup -c --environment entry:home && rollup -c --environment entry:component",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "watch:css": "watch 'npm run build:css' source/sass",
    "watch:js": "watch 'npm run build:js' source/js",
    "watch": "run-p watch:**"
  }
}
